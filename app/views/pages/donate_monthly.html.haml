:scss
  .embed-container {
    position: relative;
    overflow: hidden;
    max-width: 100%;
    height: 407px;
  }
  .embed-container iframe, .embed-container object, .embed-container embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .loadImg {
    position: relative;
    top: 60%;
    margin: 0 auto;
    width: 30%;
    z-index: 999;
    div {
      display: table-cell;
      width: 200px;
      height: 200px;
      text-align: center;
      vertical-align: middle;
    }
  }
:javascript
  function load(){
    $('.loadImg').css('display','none')
  }

.donate-page.monthly
  .hero
    .image-callout
      = image_tag "combined-shape.svg"
      .text.responsive-typography.h3 SUPPORT THE NEXT GENERATION OF LA COCINA ENTREPRENEURS
    = image_tag 'donate_monthly/hero.png'
  .membership-cta
